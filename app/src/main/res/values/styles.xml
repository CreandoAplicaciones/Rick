<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rick" parent="Base.Theme.RickAndMorty">

    </style>

    <!--     Customize text title -->

    <style name="text_roboto_regular_12" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="text_roboto_regular_14" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="text_roboto_bold_14" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="text_roboto_regular_16" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="text_roboto_bold_16" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_roboto_regular_20" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="text_roboto_bold_20" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabsStyle" parent="Widget.Design.TabLayout">
        <item name="tabInlineLabel">true</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/purple_50</item>
        <item name="tabTextAppearance">@style/TabsTextAppearance</item>
        <item name="tabSelectedTextColor">@color/purple_50</item>
    </style>

    <style name="TabsTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="progressBarPurple" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/purple_50</item>
    </style>

    <style name="buttonStyleWhite" parent="ThemeOverlay.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_50</item>
        <item name="android:padding">17dp</item>
    </style>

    <style name="buttonStyleGold" parent="ThemeOverlay.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/golden</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">17dp</item>
    </style>

    <style name="buttonStyle" parent="ThemeOverlay.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/purple_50</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">17dp</item>
    </style>

</resources>